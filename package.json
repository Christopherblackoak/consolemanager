{
  "name": "console-manager",
  "displayName": "console-manager",
  "description": "A lightweight plugin for console output that supports high customization, including adding, deleting, managing output content, log types, and more",
  "version": "0.0.4",
  "publisher": "HuangShao",
  "repository": {
    "type": "git",
    "url": "https://github.com/Huangshao1314/consolemanager.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "files": [
    "images"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.insertLog",
        "title": "Insert Log"
      },
      {
        "command": "extension.deleteLog",
        "title": "Delete Log"
      }
    ],
    "keybindings": [
      {
        "command": "extension.insertLog",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.deleteLog",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "My Extension",
      "properties": {
        "consoleManager.logType": {
          "type": "string",
          "default": "log",
          "enum": [
            "log",
            "warn",
            "error"
          ],
          "enumDescriptions": [
            "Log",
            "Warning",
            "Error"
          ],
          "description": "The type of log statement to insert"
        },
        "consoleManager.logPrefix": {
          "type": "string",
          "default": "",
          "description": "The prefix for the log statement",
          "markdownDescription": "The prefix for the log statement. Default is `selectedText:`."
        }
      }
    },
    "icon": {
      "iconPath": "images/icon.png"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
